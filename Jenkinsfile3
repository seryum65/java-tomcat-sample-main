pipeline {
    agent {
        docker { image 'maven:3.9.8-openjdk-11-slim' }
  }
    stages {
        stage('Build Application') {
            steps {
                sh 'mvn clean package'
            }
         post {
            success {
                echo "Now Archiving the Artifacts....."
                archiveArtifacts artifacts: '**/*.war'
            }
        }
    }
}
}
